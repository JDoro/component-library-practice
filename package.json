{
  "name": "component-library-practice",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook",
    "test-storybook:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"npm run build-storybook && npx http-server storybook-static --port 6006 \" \"wait-on tcp:127.0.0.1:6006 && npm run test-storybook\"",
    "test-storybook:coverage": "test-storybook --coverage",
    "coverage-report": "cp coverage/storybook/coverage-storybook.json coverage/coverage-storybook.json && nyc report --reporter=html -t coverage --report-dir coverage"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^7.6.12",
    "@storybook/addon-coverage": "^1.0.0",
    "@storybook/addon-docs": "^7.6.16",
    "@storybook/addon-essentials": "^7.6.12",
    "@storybook/addon-interactions": "^7.6.12",
    "@storybook/addon-links": "^7.6.12",
    "@storybook/addon-mdx-gfm": "^7.6.12",
    "@storybook/addon-onboarding": "^1.0.10",
    "@storybook/addon-storysource": "^7.6.16",
    "@storybook/addon-themes": "^7.6.14",
    "@storybook/blocks": "^7.6.12",
    "@storybook/preview-api": "^7.6.17",
    "@storybook/react": "^7.6.12",
    "@storybook/react-vite": "^7.6.12",
    "@storybook/test": "^7.6.12",
    "@storybook/test-runner": "^0.16.0",
    "@types/jest": "^29.5.11",
    "@types/jest-image-snapshot": "^6.4.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "axe-playwright": "^2.0.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-storybook": "^0.6.15",
    "http-server": "^14.1.1",
    "jest-html-reporters": "^3.1.7",
    "jest-image-snapshot": "^6.4.0",
    "postcss": "^8.4.33",
    "standard-version": "^9.5.0",
    "storybook": "^7.6.12",
    "tailwindcss": "^3.4.1",
    "tw-colors": "^3.3.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  }
}
